{
  "manifest_version": 2,
  "name": "WebChatGPT",
  "version": "2.0.0",
  "description": "Augment your ChatGPT prompts with relevant results from the web.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "https://ddg-webapp-aagd.vercel.app/*"
  ],
  "background": {
    "scripts": ["background/bg.js"]
  },
  "browser_action": {},
  "browser_specific_settings": {
    "gecko": {
      "id": "{b13d04e3-41db-48b3-842c-8079df93c7ad}"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content-scripts/mainUI.js"],
      "css": ["content-scripts/mainUI.css"]
    }
  ],
  "web_accessible_resources":
  [
    "icons/icon48.png",
    "icons/MaterialIcons-Regular.woff2"
  ]
}
